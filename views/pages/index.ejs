
    <%- include('../partials/mainNavbar.ejs'); -%>


<div class="container">
    <h1>Fotis Fotiadis Book list</h1>
    <h3>This is the book list page. The books here are sample data.</h3>
    <hr>

    <div class="container">
        <section id="allBooks">
            <div class="abook">
                <% for(let book of books){%>
                    <div class="container">
                        <div class="row">
                            <div class="card">
                                <div class="col-md-12 card-header">
                                    <h1>Book Details</h1>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <figure class="figure">
                                                <a href="/book/<%= book.id %>">
                                                    <img src="<%= book.bookimg %>" width="125" loading="lazy"
                                                         alt="You Can Negotiate Anything - by Herb Cohen">
                                                </a>
                                            </figure>
                                        </div>
                                        <div class="col-md-9">
                                            <h3 class="card-header" id="title<%= book.id %>"> <%= book.booktitle %></h3>
                                            <small> by <strong><%= book.author %></strong> Date read:
                                                <strong><%= book.dateread.toLocaleDateString() %></strong>
                                                enjoyed: <strong><%= book.rating %></strong> </small>
                                            <p class="mt-3"><%= book.summary %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>




                <% } %>
            </div>
        </section>

    </div>


</div>

